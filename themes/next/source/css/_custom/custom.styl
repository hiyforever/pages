// Custom styles.
.site-author-image {
    border: none;
}
.site-author-name {
    display: none;
}
.hcc {
    table>tbody>tr:nth-of-type(odd) {
        background-color: inherit;
    }
    .hc__menu__viewerbox[active=true] {
        margin-top: inherit!important;
    }
    .hc__top__right {
        float: right;
    }
    .hc__top__left {
        float: left;
    }
    .hc__reply__box {
        margin-left: inherit;
    }
    .hc__menu__comment__popup {
        height: inherit!important;

        [el=allF], [el=youtubeF] {
            display: none;
        }
    }
    .hc__menu__settings__popup {
        height: inherit!important;

        [rel=Link] {
            display: none;
        }
    }
    .hc__footer, .hc__reply__photo, .hc__top__unlike {
        display: none;
    }
}
.hc__ht {
    visibility: hidden;
}
.content-code {
    position: relative;

    .clipboard_button {
        position: absolute;
        right: 0;
        visibility: hidden;
    }
}
.content-code:hover{
    .clipboard_button {
        visibility: visible;
    }
}
.tooltipped {
    position: relative;
}
.tooltipped:after {
    position: absolute;
    z-index: 1000000;
    display: none;
    padding: 5px 8px;
    font: normal normal 11px/1.5 Helvetica,arial,nimbussansl,liberationsans,freesans,clean,sans-serif,"Segoe UI Emoji","Segoe UI Symbol";
    color: #fff;
    text-align: center;
    text-decoration: none;
    text-shadow: none;
    text-transform: none;
    letter-spacing: normal;
    word-wrap: break-word;
    white-space: pre;
    pointer-events: none;
    background: rgba(0,0,0,0.8);
    border-radius: 3px;
    -webkit-font-smoothing: subpixel-antialiased;
}
.tooltipped:before {
    position: absolute;
    z-index: 1000001;
    display: none;
    width: 0;
    height: 0;
    color: rgba(0,0,0,0.8);
    pointer-events: none;
    border: 5px solid transparent;
}
.tooltipped:hover:before,.tooltipped:hover:after,.tooltipped:active:before,.tooltipped:active:after,.tooltipped:focus:before,.tooltipped:focus:after {
    display: inline-block;
    text-decoration: none;
}
.tooltipped:active:before,.tooltipped:focus:before {
    content: "";
}
.tooltipped:active:after,.tooltipped:focus:after {
    content: attr(aria-label);
}
.tooltipped-s:after {
    top: 100%;
    right: 50%;
    margin-top: 5px;
    -webkit-transform: translateX(50%);
    -ms-transform: translateX(50%);
    transform: translateX(50%);
}
.tooltipped-s:before {
    top: auto;
    right: 50%;
    bottom: -5px;
    margin-right: -5px;
    border-bottom-color: rgba(0,0,0,0.8);
}
.clipboard_button {
    position: relative;
    display: inline-block;
    padding: 6px 12px;
    font-size: 13px;
    font-weight: bold;
    line-height: 20px;
    color: #333;
    white-space: nowrap;
    vertical-align: middle;
    cursor: pointer;
    background-color: #eee;
    background-image: linear-gradient(#fcfcfc,#eee);
    border: 1px solid #d5d5d5;
    border-radius: 3px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-appearance: none;
}
.clipboard_button i {
    font-style: normal;
    font-weight: 500;
    opacity: 0.6;
}
.clipboard_button:focus {
    text-decoration: none;
    border-color: #51a7e8;
    outline: none;
    box-shadow: 0 0 5px rgba(81,167,232,0.5);
}
.clipboard_button:focus:hover {
    border-color: #51a7e8;
}
.clipboard_button:hover,.clipboard_button:active {
    text-decoration: none;
    background-color: #ddd;
    background-image: linear-gradient(#eee,#ddd);
    border-color: #ccc;
}
.clipboard_button:active {
    background-color: #dcdcdc;
    background-image: none;
    border-color: #b5b5b5;
    box-shadow: inset 0 2px 4px rgba(0,0,0,0.15);
}
