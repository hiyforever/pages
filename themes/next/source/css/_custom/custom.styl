// Custom styles.
.site-author-image {
    border: none;
}
.site-author-name {
    display: none;
}
.hcc {
    table>tbody>tr:nth-of-type(odd) {
        background-color: inherit;
    }
    .hc__menu__viewerbox[active=true] {
        margin-top: inherit!important;
    }
    .hc__top__right {
        float: right;
    }
    .hc__top__left {
        float: left;
    }
    .hc__reply__box {
        margin-left: inherit;
    }
    .hc__menu__comment__popup {
        height: inherit!important;

        [el=allF], [el=youtubeF] {
            display: none;
        }
    }
    .hc__menu__settings__popup {
        height: inherit!important;

        [rel=Link] {
            display: none;
        }
    }
    .hc__footer, .hc__reply__photo, .hc__top__unlike {
        display: none;
    }
}
.hc__ht {
    visibility: hidden;
}